{{#if res}}
    <div class="container header-page2">
        <div class="centered">
            <h2 id= "bestYearName">"Best Year in Film for: {{search}}"</h2>
        </div>
    </div>
    {{#each res}}
        <div class="container lists">
            <div class="container input-list">
                <div class="row">
                    <div class="col-lg-9 text-left">
                        <h2>{{name}}</h2>
                    </div>
                    <div class="col-lg-3 text-md-right text-left mt-lg-0 my-3">
                        <h2>{{year}}</h2>
                    </div>
                </div>
                <div class="row text-left">
                    <h3>Year Vote Average: {{best_year_rating}}</h3>
                </div>
                <div class="row text-left">
                    <h3>Best Film: {{title}}</h3>
                </div>
                <div class="row text-left">
                    <h3>Film Average Vote: {{movie_rating}}</h3>
                </div>
                <div class="row text-left">
                    <h3>Job: {{job}}</h3>
                </div>
                <div class="row text-left">
                    <h3>Characters: {{characters}}</h3>
                </div>
                <hr>
            </div>
        </div>
        <hr>
    {{/each}}
{{/if}}