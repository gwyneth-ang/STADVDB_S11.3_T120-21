{{#if drillDownResult}}
    <div class="container lists">
        <div class="container input-list">
            <div class="centered">
                <h3>Drill-down Results</h3>
            </div>
            {{#each drillDownResult}}
            <div class="row">
                <div class="col-lg-9 text-left">
                    <h2>Year: {{year}}</h2>
                </div>
                <div class="col-lg-9 text-left">
                    <h2>Quarter: {{quarter}}</h2>
                </div>
                <div class="col-lg-9 text-left">
                    <h2>Genre: {{genre}}</h2>
                </div>
                <div class="col-lg-9 text-left">
                    <h2>Number of movies published: {{number_of_movies}}</h2>
                </div>
            </div>
            <hr>
            {{/each}}
        </div>
    </div>
{{/if}}