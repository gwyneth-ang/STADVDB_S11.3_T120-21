{{#if rollResult}}
    <div class="container lists">
        <div class="container input-list">
            <div class="centered">
                <h3>The average score of movies in <u>{{year}}</u> computed per genre, country, and year</h3>
            </div>
            {{#each rollResult}}
            <div class="row">
                <div class="col-lg-9 text-left">
                    <h2>Year: {{year}}</h2>
                </div>
                <div class="col-lg-9 text-left">
                    <h2>Country: {{country}}</h2>
                </div>
                <div class="col-lg-9 text-left">
                    <h2>Genre: {{genre}}</h2>
                </div>
                <div class="col-lg-9 text-left">
                    <h2>Average Score: {{AverageScore}}</h2>
                </div>
            </div>
            <hr>
            {{/each}}
        </div>
    </div>
{{/if}}